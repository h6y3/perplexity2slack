{
  "manifest_version": 3,
  "name": "Perplexity to Slack",
  "version": "1.0.0",
  "description": "Adds a button to copy Perplexity.ai content in Slack-compatible markdown format",
  "permissions": ["activeTab", "clipboardWrite", "contextMenus"],
  "host_permissions": ["*://*.perplexity.ai/*"],
  "content_scripts": [
    {
      "matches": ["*://*.perplexity.ai/*"],
      "js": ["content.js"],
      "css": ["styles/button.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}