{
  "name": "perplexity2slack",
  "version": "1.0.0",
  "description": "Chrome extension to copy Perplexity.ai content to Slack in proper formatting",
  "main": "index.js",
  "scripts": {
    "test": "node tests/run-tests.js",
    "generate-icons": "node generate-icons.js",
    "build": "webpack --config webpack.config.js && zip -r ./dist/perplexity2slack.zip ./dist/*",
    "build:legacy": "mkdir -p dist && cd perplexity2slack && zip -r ../dist/perplexity2slack.zip * -x \"*.git*\" -x \"node_modules/*\"",
    "dev": "webpack --config webpack.config.js --watch"
  },
  "keywords": [
    "perplexity",
    "slack",
    "markdown",
    "chrome-extension"
  ],
  "author": "Han Yuan",
  "license": "MIT",
  "dependencies": {
    "slackify-markdown": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "svg2png": "^4.1.1",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.2"
  }
}